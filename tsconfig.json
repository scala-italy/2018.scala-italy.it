{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": false,
    "allowJs": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": ".",
    "jsx": "react",
    "removeComments": true,
    "lib": ["esnext", "dom"],
    "paths": {
      "model": ["src/model"],
      "HTTPAPI": ["src/HTTPAPI"],
      "container": ["src/container"],
      "Basic": ["src/components/Basic"],
      "queries": ["src/queries"],
      "commands": ["src/commands"],
      "transitions": ["src/transitions"],
      "*": ["src/components/Basic/*", "src/components/*", "src/*"]
    }
  },
  "include": [
    "src/**/*",
    "typings"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
